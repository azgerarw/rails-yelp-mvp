<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li><%= link_to restaurant.name, "/restaurants/#{restaurant.id}" %><%= link_to "Delete",
    restaurant_path(restaurant),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %></li>
  <%end%>
</ul>

